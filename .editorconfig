# @see http://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

ij_visual_guides = 120

[*.{htm,html,phtml,svg,twig,xml,xsd}]
ij_continuation_indent_size = 8

[*.{yaml,yml}]
indent_size = 2

[*.{bat,cmd}]
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false
